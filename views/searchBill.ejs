	      {
	    	    $("#date").hide();
		        $("#month").show();
		        $("#year").show();
		        $("#submit").show();
		        $('input[name="date"]').prop('required',false);
		        $('input[name="month"]').prop('required',true);
		        $('input[name="year"]').prop('required',true);
	      }
	      else if(this.value == 'year')
	    	  {
