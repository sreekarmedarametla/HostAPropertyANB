	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-10">
			<div class="tabbable">
				<ul class="nav nav-pills nav-stacked col-md-3">
					<br><br>
					<li class="active"><a href="#a" data-toggle="tab">View Property</a></li>
					<li><a href="#c" data-toggle="tab">List Reviews</a></li>
					<!--<li><a href="#d" data-toggle="tab">Write a Review</a></li>-->
				</ul>
				<div class="tab-content col-md-9">
					<input action="action" type="button" class = "glyphicon-arrow-left pull-right" style = "font-size: 16px; background-color: #008CBA" value="Back" onclick="history.go(-1);" />
					<br><br>
					<div class="tab-pane active" id="a">
						<div class="panel panel-default">
							<div class="panel-heading" align="middle" style="font-size: auto" ng-model="product_name_model">
								<strong><h3> <%=property[0].title%></h3></strong>
							</div>
							<div class="panel-body" style="height:175px">
								<div class="col-sm-3">
								<img src="/images/getpicture3.png" alt="No image found :(" style="width:100%;height:100%;float:left" align="top">
								</div>
								
								<div class="col-sm-9">
								<br>
								<div class=row>
									<div class="col-sm-9" align="left" ><h4><strong><%=property[0].user_id%> <%=host[0].fname%> <%=host[0].lname%></strong></h4></div>
									<div class="col-sm-3" align="left" ><strong><h3>*****</h3></strong></div>
								</div><br>
								<div class="col-sm-3"><strong>Category</strong></div>
								<div class="col-sm-3"><strong>No. of Guests</strong></div>
								<div class="col-sm-3"><strong>No. of rooms</strong></div>
								<div class="col-sm-3"><strong>Location</strong></div>
							
								<div class="col-sm-3"><%=property[0].category%></div>
								<div class="col-sm-3"><%=property[0].guests%></div>
								<div class="col-sm-3"><%=property[0].rooms%></div>
								<div class="col-sm-3"><%=property[0].city%>, <%=property[0].state%>, <%=property[0].zip_code%>$</div>
								</div>
							</div>
						</div>
					</div>
					<div class="tab-pane" id="c">
						<div class="panel panel-default">
							<div class="panel-footer">
								<% if(review.length){ 
								    for(var i = 0; i<review.length ; i++) { %>
							<div class="row"><br>
							<div class="col-sm-10" >
							<table class="table table-bordered table-striped">
								<thead>
									<tr class>
									<th>Reviews</th>
									<th>review id</th>
									<th>host id</th>
									<th>user id</th>
									<th>trip id</th>
									<th width="12%">Ratings</th>	
									</tr>
								</thead>
								<tbody>
									<td><%=review[i].review%></td>
									<td><%=revw_ssn[i]%></td>
									<td><%=host_ssn[i]%></td>
									<td><%=user_ssn[i]%></td>
									<td><%=trip_ssn[i]%></td>
									<td><%=review[i].rating%></td>
									</tr>
								</tbody>
							</table>
							</div>
							</div>
							<% }            
							     }else{ %>
									   <br><br><h1 align="center"> No reviews for this Property</h1><br><br>
								            <% } %> 								
							</div>	
						</div>
					</div>
					
					<div class="tab-pane" id="d">
						<div class="panel panel-default">
							<div class="panel-heading" align="middle" style="font-size: auto>
								<strong><h3>Add Reviews</h3></strong>
							</div>
							<div class="panel-body" >
								<form action = '/saveUserReview/<%=host[0].user_id%>' method = 'post'>								
								<textarea rows="4" cols="120" name="review" id="review" placeholder="Provide review here...."></textarea><br><br>
								<div class="form-group">
                        			<div class="col-sm-4">
                    		        <select class="form-control" id="rating" name="rating">
                            		    <option>SELECT RATING</option>
                            		    <option>5</option>
						 			   	<option>4</option>
									    <option>3</option>
									    <option>2</option>
						    			<option>1</option>
						    			<option>0</option>
                           	 		</select>
                        			</div>
									<div class="col-sm-6" align="right">
										<button  class="btn btn-danger" style="display: block;width:100%;font-size:auto" type="submit" ><strong>Submit Review & Rating</strong></button>
									</div>
								</div>
								</form>
							</div>
						</div>
					</div>
						</div>
					</div>
				</div>
			</div>
